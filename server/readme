admin dashboard table ----

1. CREATE TABLE users (
    user_id NUMBER GENERATED BY DEFAULT AS IDENTITY,
    full_name VARCHAR2(100),
    email VARCHAR2(100),
    phone VARCHAR2(15),
    password VARCHAR2(255),
    registration_date DATE DEFAULT SYSDATE,
    PRIMARY KEY (user_id)
);

2. CREATE TABLE services (
    service_id NUMBER GENERATED BY DEFAULT AS IDENTITY,
    service_name VARCHAR2(100),
    description CLOB,
    price NUMBER(10,2),
    created_at DATE DEFAULT SYSDATE,
    PRIMARY KEY (service_id)
);

3. CREATE TABLE book_sec (
    booking_id NUMBER GENERATED ALWAYS AS IDENTITY PRIMARY KEY,
    user_id NUMBER,
    service_id NUMBER,
    booking_date DATE DEFAULT SYSDATE,
    status VARCHAR2(20) DEFAULT 'Pending',
    CONSTRAINT fk_user
        FOREIGN KEY (user_id)
        REFERENCES users(user_id),
    CONSTRAINT fk_service
        FOREIGN KEY (service_id)
        REFERENCES services(service_id)
);



4. CREATE TABLE contact_queries (
    query_id NUMBER GENERATED BY DEFAULT AS IDENTITY,
    full_name VARCHAR2(100),
    email VARCHAR2(100),
    message CLOB,
    status VARCHAR2(10) DEFAULT 'Unread',
    created_at DATE DEFAULT SYSDATE,
    PRIMARY KEY (query_id)
);

